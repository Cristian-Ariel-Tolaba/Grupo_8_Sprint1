<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head')%> 
<body class="login">

    <%- include('./partials/header') %> 

    <main class="login__main mt-4">

        <h1 class="body-log-h1">Iniciar sesión</h1>
        <hr>

        <form class="row" action="" method="POST" id="form-login">
            <div>
                <label class="form-label" for="email">Dirección de correo electrónico</label>
                <input class="form-control" type="email" name="email" id="email" autocomplete="off">
                <p class="text-danger"> <%= locals.errors && errors.email ? errors.email.msg : null %></p>
                <p id="msgEmail"></p>
            </div>

            <div>
                <label class="form-label" for="password">Contraseña</label> 
                <input class="form-control" type="password" name="password" id="password" autocomplete="off">
                <p class="text-danger"><%= locals.errors && errors.password ? errors.password.msg : null %></p>
                <p id="msgPassword"></p>
            </div>

            <div class="text-end">
                <label class="checkbox-label" for="recordame"><input class="checkbox-input" type="checkbox" name="recordame" id="recordame">Recordame</label>
               
            </div>
            <div class="text-center mt-3">
                <button class="btn btn-dark" type="submit" id="btn-submit">Ingresá</button>
            </div>

            <div class="text-center mt-4">
                <p class="register-p">¿No tienes cuenta? <a class="register-a" href="/users/register">Regístrate</a></p>
            </div>
        </form>
    </main>
    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %> 
    <script src="/js/loginValidacion.js"> </script>   
</body>

</html>