<!DOCTYPE html>
<html lang="es">
    
    <%- include('./partials/head',{title: 'Registrate', stylesheets: 'register.css'})%> 

<body>

    <%- include('./partials/header') %> 

    <%- include('./partials/baner') %> 

        <div class="registroForm">


            <form action="" class="form" method="post" enctype="multipart/form-data">

                
              <h1 class="title">Regístrate</h1>
        
                    <div class="inputContainer"> 

                        <label class="label" for="firstname">Nombre</label>
                        <input type="text" class="input" id="firstname" name="firstname"
                        value="<%= locals.old && old.firstname ? old.firstname : null %>">
                        <p>
                            <%= locals.errors && errors.firstname ? errors.firstname.msg : null %>
                        </p>
                    </div>
    
                    <div class="inputContainer">
                        <label class="label" for="lastname">Apellido</label>
                        <input type="text" class="input" id="lastname" name="lastname" autocomplete="off"
                        value="<%= locals.old && old.lastname ? old.lastname : null %>">
                        <p>
                            <%= locals.errors && errors.lastname ? errors.lastname.msg : null %>
                        </p>
                    </div>

                    <div class="inputContainer">
                        <label class="label" for="username">Nombre de usuario</label>
                        <input type="text" class="input" id="username" name="username"
                            value="<%= locals.old && old.username ? old.username : null %> ">
                        
                        <p>
                            <%= locals.errors && errors.username ? errors.username.msg : null %>
                        </p>
        
                    </div>
        
                    <div class="inputContainer">
                        <label class="label" for="email">Email</label>   
                        <input type="email" class="input" id="email" name="email" autocomplete="off"
                        value="<%=locals.old && old.email ? old.email : null %>">
                       
                        <p>
                            <%= locals.errors && errors.email ? errors.email.msg : null %>
                        </p>
                    </div>
        
                    <div class="inputContainer">
                        <label class="label" for="password">Contraseña</label>
                        <input type="password" class="input" id="password" name="password" autocomplete="off">
                        
                        <p class="form__error__msg">
                            <%= locals.errors && errors.password ? errors.password.msg : null%>
                        </p>
                    </div>
        
                    <div class="inputContainer">
                        <label class="label" for="password2">Confirmá tu contraseña</label>
                        <input type="password" class="input" id="password2" name="password2" autocomplete="off">
                        
                        <p>
                            <%= locals.errors && errors.password2 ? errors.password2.msg : null%>
                        </p>
                    </div>

                    <div class="inputContainer">
                        <label for="avatar">Imagen de perfil</label>
                        <input hidden type="file" name="avatar" id="avatar">
                    </div>


                    <div class="inputContainer" >
                        <input type="submit" id="btnRegister" value="Registrarse">
                        <a href ='/users/login'>¿Ya tiene una cuenta?</a>
                    </div>

                </form>

          </div>

    <%- include('./partials/footer') %> 

                   
</body>

</html>